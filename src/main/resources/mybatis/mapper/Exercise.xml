    <![CDATA[ 
       SELECT  
         CNO
         , TITLE
         , CONTENTS
        , MNO
         , BDATE
         , COUNTS  
         , row_number() over(order by cno) as rnum
       FROM  
          COMMUNITY  
       where cno  = #{cno} and ctype='E'
 )
 where rnum between #{cri.pageStart} and #{cri.PageEnd}
    ]]>
